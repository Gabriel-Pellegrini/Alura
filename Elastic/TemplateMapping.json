//---------------------------// TEMPLATE CATALOGO// --------------------------

PUT _template/catalogo
{
  "template":"catalogo",
  "settings": {
    "index": {
      "number_of_shards": 3,
      "number_of_replicas": 0
    }
  },
  "mappings": {
    "pessoas": {
      "_all": {
        "type": "text",
        "analyzer": "brazilian"
      },
      "properties": {
        "cidade": {
          "type": "text",
          "analyzer": "brazilian"
        },
        "estado": {
          "type": "text"
        },
        "formação": {
          "type": "text",
          "analyzer": "brazilian"
        },
        "interesses": {
          "type": "text",
          "analyzer": "brazilian"
        },
        "nome": {
          "type": "text",
          "analyzer": "brazilian"
        },
        "país": {
          "type": "text",
          "analyzer": "brazilian"
        },
        "nascimento":{
          "type":"date"
        }
      }
    }
  }
}

//---------------------------// TEMPLATE SINONIMO// --------------------------
PUT _template/catalogo_sinonimo
{
  "template":"catalogo_sinonimo",
  "settings":{
    "index":{
      "number_of_shards":3,
      "number_of_replicas":0
    },
    "analysis": {
      "filter": {
        "filtro_de_sinonimos": {
          "type": "synonym",
          "synonyms": [
            "esporte,futebol,society,futeba,pelada"
          ]
        }
      },
      "analyzer":{
        "sinonimos":{
          "tokenizer":"standard",
          "type":"custom",
          "filter":[
            "lowercase",
            "filtro_de_sinonimos"
          ]
        }
      }
    }
  }
}
  
  