//PUT catalogo/pessoas/1
{
  "nome": "Gabriel Pellegrini",
  "interesses":["tecnologia","esportes","games"],
  "cidade":"São Paulo",
  "formação":"Ciência da Computação",
  "estado":"SP",
  "país":"Brasil",
